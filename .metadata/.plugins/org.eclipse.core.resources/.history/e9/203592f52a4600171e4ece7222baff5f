package gui;

import java.awt.FlowLayout;

import javax.swing.JDialog;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import java.awt.Color;
import java.awt.TextArea;

public class DialogHelp extends JDialog {


	private static final long serialVersionUID = 1L;
	private static DialogHelp ayuda;
	private final JPanel contentPanel = new JPanel();

	DialogHelp() {
		setResizable(false);
		getContentPane().setBackground(Color.LIGHT_GRAY);
		setTitle("Ayuda");
		setModal(false);
		setBounds(100, 100, 464, 444);

		getContentPane().setLayout(null);

		TextArea textArea = new TextArea();
		textArea.setEditable(false);
		textArea.setText(
				"----Guia de Ayuda----\n"
				+ "---SECCION ADMINISTRADOR---\n"
				+ "El menú de Archivo nos permite gestionar nuestro stock,"
				+ "pudiendo abrir uno existente, iniciar uno nuevo o guardar el actual\n"
				+ "El menú de Gestión nos ofrece la posibilidad de añadir, mostrar, modificar o eliminar"
				+ "artículos, alterando la estructura de la ventana en función del tipo de artículo.\n"
				+ "por otra parte, se ofrece la posibilidad de eliminar por código o recorriendo el stock."
				+ "\nActualizar existencias permite añadir una cantidad determinada de todos los artículos del stock"
				+ "\nLa opción de Pedidos pretende abrir un fichero de texto que almacena los pedidos realizados"
				+ "\npor los usuarios, (ver sección clientes)"
				+ "\nLa opción Cambiar Destacados, pendiente de completar, modificaría los artículos que se mostrarían"
				+ "\n como destacados en la sección de clientes"
				+ ""
				+ "");
		textArea.setBounds(0, 0, 454, 434);
		getContentPane().add(textArea);
		contentPanel.setLayout(new FlowLayout());
		contentPanel.setBorder(new EmptyBorder(5, 5, 5, 5));
	}
	/**
	 * singleton
	 * @return new Ayuda
	 */
	public static DialogHelp getInstance() {
		if (ayuda == null)
			ayuda = new DialogHelp();
		return ayuda;
	}
}