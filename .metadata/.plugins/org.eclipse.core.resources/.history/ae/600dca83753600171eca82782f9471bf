public class PanelAnadir extends PanelPadre {

	public PanelAnadir() {
		setTitle("Stock: Introducir articulo");
		textNombre.setEnabled(true);
		textDetalles.setEnabled(true);
		textPrecio.setEnabled(true);
		textPaginas.setEnabled(true);
		btnAnterior.setVisible(false);
		btnSacar_borrar.setVisible(false);
		btnSiguiente.setVisible(false);
	 btnALaCesta_anadir.setText("A\u00f1adir");
	 	
	 
	 btnALaCesta_anadir.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				
				if(panelLibro.isVisible()){
					LocalDate fechaEntrada = (LocalDate) spinnerEntrada.getValue();
					try {
						Principal.stock.incluirEnStock(new Libro(textNombre.getText(),textDetalles.getText(),
								Double.parseDouble(textPrecio.getText()),
								(EstadoArticulo)comboBoxEstado.getSelectedItem(),LocalDate.now(),
								Integer.parseInt(textPaginas.getText()),
								LocalDate.of(2016,10,24),textAutor.getText(),true,(IdiomaLibro)comboBox_Idioma.getSelectedItem()
								,(CategoriaLibro)comboBox_Genero.getSelectedItem()), 10);
					} catch (NumberFormatException | NombreNoValidoException
							| PrecioNoValidoException | FechaNoValidaException e1) {
						JOptionPane.showMessageDialog(null,"no se pudo a\u00f1adir");
					}}
				else if(panelJuego.isVisible()){
				
				}	
				else if(panelFigura.isVisible()){

				}
				
					
			}
	 });

}
	
}
